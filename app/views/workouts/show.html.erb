<h1>WORKOUT DETAIL (show)</h1>
<h2>Do this after edit</h2>
<p id="notice"><%= notice %></p>

<p>
  <strong>Body weight:</strong>
  <%= @workout.body_weight %>
</p>

<% @workout.lift_workouts.each do |lift_workout| %>
  <div>Lift Name: <%= lift_workout.lift.name %> -
    Lift Weight: <%= lift_workout.weight %></div>
    <% lift_workout.lift_sets.each do |set| %>
      <div><%= set.rep_count %></div>

    <% end %>
<% end %>

<%= link_to 'Edit', edit_workout_path(@workout) %> |
<%= link_to 'Back', workouts_path %>
