<%= javascript_pack_tag "workouts/index_page" %>

<p id="notice"><%= notice %></p>

<h1>Workouts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Body weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.workout_date %></td>
        <td><%= workout.body_weight %></td>
        <td><%= link_to 'Show', workout %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container-fluid">
  <div class="row flex-row flex-nowrap">
    <% @workouts.each do |workout| %>
      <div class="col-5 p-0">
        <div class="card card-block">
          <div class="display-4"><%= workout.workout_date.strftime("%A") %></div>
          <div class="h1"><%= workout.workout_date.strftime("%d %b") %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

